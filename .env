# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

DATABASE_URL="file:./dev.db"

# Used for session encryption
SESSION_SECRET="replace-this-with-a-strong-random-secret-in-production"

# Stripe API Keys (replace with your actual keys)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# AWS Credentials (replace with your actual keys/config)
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY_ID"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_ACCESS_KEY"
AWS_REGION="us-east-1" # Or your preferred region
AWS_S3_BUCKET_NAME="your-event-photo-bucket-name"
AWS_LAMBDA_FUNCTION_NAME="your-face-recognition-lambda-name"

# Base URL for the application (used for things like Stripe webhooks)
APP_BASE_URL="http://localhost:5173" # Adjust if needed
